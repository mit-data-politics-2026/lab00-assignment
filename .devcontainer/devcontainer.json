{
  "name": "Data and Politics - Lab 0",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && . $HOME/.local/bin/env && uv sync",
  "postStartCommand": ". $HOME/.local/bin/env && marimo edit notebooks/lab00/lab00.py --host 0.0.0.0 --port 2718 &",
  "customizations": {
    "vscode": {
      "extensions": [
        "marimo-team.vscode-marimo"
      ]
    }
  },
  "forwardPorts": [2718],
  "portsAttributes": {
    "2718": {
      "label": "Marimo",
      "onAutoForward": "openBrowser"
    }
  }
}
